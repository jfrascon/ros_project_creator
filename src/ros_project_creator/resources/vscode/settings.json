{
  // ==========================================================================
  // GENERAL SETTINGS
  // ==========================================================================
  "editor.autoIndent": "full",
  "editor.detectIndentation": true,
  "editor.formatOnPaste": true,
  "editor.formatOnSaveMode": "modifications",
  "editor.formatOnType": true,
  "editor.rulers": [
    120
  ],
  "files.associations": {
    "*.config": "properties",
    "*.json": "jsonc",
    "*.launch": "xml",
    "*.sdf": "xml",
    "*.world": "xml"
  },
  "files.autoSave": "onFocusChange",
  "files.autoSaveDelay": 30000,
  "files.trimTrailingWhitespace": true,
  "files.watcherExclude": {
    "${workspaceFolder}/build/**": true,
    "${workspaceFolder}/install/**": true,
    "${workspaceFolder}/devel/**": true,
    "${workspaceFolder}/log/**": true,
    "${workspaceFolder}/logs/**": true,
    // '${workspaceFolder}/src/**' means it looks into all subdirectories inside 'src'.
    // '/.git/**' refers to any file or folder inside any '.git' directory.
    // This will automatically exclude all '.git' directories located within any subdirectory of
    // ${workspaceFolder}/src.
    "${workspaceFolder}/src/**/.git/**": true
  },
  "vsintellicode.python.completionsEnabled": true,
  // ==========================================================================
  // CPP SETTINGS
  // ==========================================================================
  "C_Cpp.enhancedColorization": "enabled",
  "C_Cpp.intelliSenseEngine": "default",
  "C_Cpp.intelliSenseEngineFallback": "enabled",
  "C_Cpp.loggingLevel": "Debug",
  "[cpp]": {
    "editor.defaultFormatter": "ms-vscode.cpptools"
  },
  "C_Cpp.formatting": "clangFormat",
  "C_Cpp.clang_format_style": "file",
  "C_Cpp.codeAnalysis.clangTidy.enabled": true,
  "C_Cpp.codeAnalysis.runAutomatically": false,
  "C_Cpp.codeAnalysis.clangTidy.path": "/usr/bin/clang-tidy",
  "C_Cpp.codeAnalysis.clangTidy.useBuildPath": true,
  // Configure glob patterns for excluding folders and files for code analysis.
  "C_Cpp.codeAnalysis.exclude": {
    "**/build": true,
    "**/devel": true,
    "**/install": true,
    "**/log": true,
    "**/.git": true
  },
  // ==========================================================================
  // PYTHON SETTINGS
  // ==========================================================================
  "python.analysis.autoFormatStrings": true,
  "python.analysis.typeCheckingMode": "standard",
  "python.languageServer": "Pylance",
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    "editor.formatOnSaveMode": "modifications"
  },
  "black-formatter.args": [
    "--line-length",
    "120"
  ],
  // ==========================================================================
  // XML SETTINGS
  // ==========================================================================
  "xmlTools.enableXmlTreeView": true,
  "xmlTools.splitAttributesOnFormat": true,
  "xmlTools.xmlFormatterImplementation": "v2"
}